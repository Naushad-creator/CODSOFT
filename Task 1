import re
import random


class ChatBot:
    def __init__(self, name="Bot"):
        self.name = name
        self.patterns = self.load_patterns()
        self.jokes = [
            "Why donâ€™t scientists trust atoms? Because they make up everything!",
            "Why was the math book sad? It had too many problems.",
            "I told my computer a joke, but it didnâ€™t laugh. It just crashed."
        ]
        self.quotes = [
            "Believe you can and you're halfway there.",
            "The only limit to our realization of tomorrow is our doubts of today.",
            "Happiness is not something ready made. It comes from your own actions."
        ]
        self.music = [
            "ðŸŽµ 'Shape of You' by Ed Sheeran",
            "ðŸŽµ 'Blinding Lights' by The Weeknd",
            "ðŸŽµ 'Believer' by Imagine Dragons",
            "ðŸŽµ 'Tum Hi Ho' by Arijit Singh",
            "ðŸŽµ 'Kesariya' from Brahmastra"
        ]

    def load_patterns(self):
        return {
            r"\b(hello|hi|hey)\b": [
                "Hello! How can I assist you today?",
                "Hi there! What can I do for you?",
                "Hey! Need any help?"
            ],
            r"\bhow are you\b": [
                "I am just a bot, but I'm functioning great!",
                "Doing well! Thanks for asking.",
                "I'm fine. How about you?"
            ],
            r"\b(bye|goodbye|exit)\b": [
                "Goodbye! Have a nice day.",
                "Bye! Take care.",
                "See you soon!"
            ],
            r"\bwhat is your name\b": [
                f"My name is {self.name}.",
                f"You can call me {self.name}.",
                f"I am {self.name}, your chatbot friend."
            ],
            r"\bwho created you\b": [
                "I was created by a programmer.",
                "Someone smart coded me.",
                "A human developer built me."
            ],
            r"\bjoke\b": [
                "Hereâ€™s a joke: " + random.choice([
                    "Why donâ€™t scientists trust atoms? Because they make up everything!",
                    "Why did the scarecrow win an award? Because he was outstanding in his field.",
                    "Why donâ€™t programmers like nature? Too many bugs."
                ])
            ],
            r"\bmusic\b": [
                "You should listen to: " + random.choice([
                    "â€˜Perfectâ€™ by Ed Sheeran",
                    "â€˜Believerâ€™ by Imagine Dragons",
                    "â€˜Tum Hi Hoâ€™ by Arijit Singh",
                    "â€˜Shape of Youâ€™ by Ed Sheeran",
                    "â€˜Kesariyaâ€™ from Brahmastra"
                ])
            ],
            r"\bquote\b": [
                "Hereâ€™s a quote: " + random.choice([
                    "Success is not final, failure is not fatal: It is the courage to continue that counts.",
                    "Happiness depends upon ourselves.",
                    "Do something today that your future self will thank you for."
                ])
            ],
            r"\b(can you help me|help)\b": [
                "Of course! Tell me what you need help with.",
                "I will try my best. What's the problem?",
                "Sure! I'm here to assist."
            ],
            r"\bthank(s| you)\b": [
                "You're welcome!",
                "No problem at all!",
                "Happy to help!"
            ]
        }

    def get_response(self, user_input):
        for pattern, responses in self.patterns.items():
            if re.search(pattern, user_input, re.IGNORECASE):
                return random.choice(responses)
        return self.default_response()

    def default_response(self):
        fallback = [
            "I'm not sure I understand. Can you rephrase?",
            "Interesting... Tell me more.",
            "Hmm, that's something I need to learn about."
        ]
        return random.choice(fallback)

def chat():
    print("ChatBot: Hello! Type 'bye' or 'exit' to quit.")
    bot = ChatBot("NaushBot")
    while True:
        user_input = input("You: ")
        if user_input.lower() in ["bye", "exit", "quit"]:
            print("ChatBot: Goodbye! Talk to you later.")
            break
        response = bot.get_response(user_input)
        print(f"ChatBot: {response}")


if __name__ == "__main__":
    chat()
